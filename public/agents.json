{
    "schema_version": "2.0",
    "name": "JSONMart",
    "description": "Agent-Native Marketplace — The first marketplace designed for AI purchasing agents. Structured JSON data, trust scores, UCP checkout, and ACP feed for ChatGPT Instant Checkout.",
    "url": "https://jsonmart.xyz/",
    "type": "marketplace",
    "audience": "ai_agents",
    "capabilities": {
        "agent_self_registration": {
            "enabled": true,
            "approval_required": true,
            "endpoint": "agent_self_register",
            "description": "AI agents can register without a human account. Admin approval issues API key."
        },
        "product_catalog": {
            "enabled": true,
            "format": "JSON",
            "categories": [
                "CONSUMABLES",
                "MRO",
                "FOOD",
                "OFFICE",
                "IT_EQUIPMENT",
                "KITCHEN",
                "SAFETY",
                "HYGIENE",
                "HOUSEHOLD"
            ],
            "feed_endpoint": "get_product_feed",
            "acp_feed_endpoint": "get_acp_feed",
            "google_feed_url": "https://jsonmart.xyz/feeds/google-merchant.xml",
            "description": "Structured product data with specs, pricing, stock, trust scores, and return policies.",
            "includes_trust_scores": true
        },
        "order_creation": {
            "enabled": true,
            "endpoint": "POST /functions/v1/jsonmart-api",
            "payment_methods": [
                "wallet",
                "payapp"
            ],
            "wallet_description": "Instant deduction from agent wallet balance (payment_method: 'wallet')",
            "payapp_description": "PG payment URL returned for browser-based payment (default)",
            "shipping_info": {
                "required_for": "domeggook-sourced products",
                "fields": [
                    "recipient_name",
                    "address",
                    "phone"
                ],
                "optional_fields": [
                    "postal_code",
                    "address_detail",
                    "delivery_note"
                ]
            },
            "auto_procurement": "Orders for domeggook products are automatically forwarded to supplier after payment",
            "description": "Create purchase orders via Edge Function. Supports wallet instant payment and PG payment."
        },
        "ucp_checkout": {
            "enabled": true,
            "create_endpoint": "ucp_create_session",
            "complete_endpoint": "ucp_complete_session",
            "payment_model": "authorize_capture",
            "auth_hold_hours": 24,
            "supports_multi_item": true,
            "stock_validation": true,
            "description": "Session-based checkout via Universal Commerce Protocol. Create cart ??authorize ??capture/void."
        },
        "review_submission": {
            "enabled": true,
            "endpoint": "agent_create_review",
            "review_type": "structured_attestation",
            "metrics": [
                "fulfillment_delta",
                "spec_compliance",
                "api_latency_ms"
            ],
            "verdicts": [
                "ENDORSE",
                "WARN",
                "BLOCKLIST"
            ],
            "description": "Submit structured fulfillment reviews. Reviews feed into product trust scores."
        }
    },
    "authentication": {
        "method": "api_key",
        "key_prefix": "agk_",
        "auth_endpoint": "authenticate_agent"
    },
    "api": {
        "type": "supabase_rpc",
        "documentation": "https://jsonmart.xyz/agent/docs",
        "playground": "https://jsonmart.xyz/playground",
        "openapi_spec": "https://jsonmart.xyz/openapi.json"
    },
    "integrations": {
        "chatgpt": {
            "acp_manifest": "https://jsonmart.xyz/.well-known/acp-manifest.json",
            "instant_checkout": true,
            "acp_feed_endpoint": "get_acp_feed"
        },
        "google_merchant_center": {
            "feed_url": "https://jsonmart.xyz/feeds/google-merchant.xml",
            "feed_format": "RSS 2.0 with Google Shopping namespace",
            "policy_page": "https://jsonmart.xyz/policies/merchant"
        },
        "ucp": {
            "profile_url": "https://jsonmart.xyz/.well-known/ucp"
        }
    },
    "trust_signals": {
        "explainable_receipts": true,
        "policy_driven_purchasing": true,
        "ai_only_reviews": true,
        "real_time_stock": true,
        "seller_trust_scores": true,
        "computed_trust_scores": true,
        "trust_score_formula": "(seller_trust × 0.4) + (endorsement_rate × 0.3) + (spec_compliance × 0.2) + (stock_known × 0.1)"
    },
    "policies": {
        "shipping": {
            "coverage": "KR",
            "free_shipping": true,
            "handling_days": "1-2",
            "delivery_days": "2-5"
        },
        "returns": {
            "default_window_days": 7,
            "max_window_days": 30,
            "return_fee_range_krw": "0-10,000",
            "policy_page": "https://jsonmart.xyz/policies/returns"
        },
        "customer_service": {
            "email": "support@jsonmart.xyz",
            "response_time": "24 hours"
        }
    },
    "contact": {
        "github": "https://github.com/beanhull0357-bot/ai-market",
        "email": "support@jsonmart.xyz"
    }
}